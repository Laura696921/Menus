@model Menus.Models.Dish

@{
    ViewData["Title"] = $"Детайли за {Model.Name}";
}

<style>
    body {
        background: #fff6f0; /* Soft peachy very light */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 900px;
        background: #f7e6dc; /* Warm peachy card background */
        padding: 2.5rem 2rem;
        border-radius: 1.25rem;
        box-shadow: 0 10px 25px rgba(216, 122, 75, 0.2);
        margin: 3rem auto 4rem;
    }

    h2 {
        color: #d87a4b;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    h4.text-success {
        color: #8a5a2a;
        font-weight: 600;
        font-size: 1.5rem;
    }

    p.text-muted {
        color: #6c4a32;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .img-fluid {
        border-radius: 1rem;
        box-shadow: 0 12px 30px rgba(216, 122, 75, 0.25);
        max-height: 350px;
        width: 100%;
        object-fit: cover;
    }

    .row > .col-md-6 {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .btn-back {
        display: inline-block;
        margin: 2rem auto 0;
        padding: 0.5rem 1.75rem;
        border-radius: 9999px;
        background-color: #d87a4b;
        color: white;
        font-weight: 600;
        text-align: center;
        border: none;
        transition: background-color 0.3s ease;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-back:hover {
            background-color: #bf6f42;
            text-decoration: none;
            color: white;
        }

        .btn-back:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(216, 122, 75, 0.6);
        }
</style>

<div class="container">
    <div class="row gx-5">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid shadow-sm" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <h4 class="text-success">@Model.Price.ToString("0.00") лв</h4>
            <p class="mt-4 text-muted">@Model.Description</p>
        </div>
    </div>

    <a href="@Url.Action("Categories", "Customer")" class="btn-back">← Назад към категории</a>
</div>
